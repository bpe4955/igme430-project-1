<!DOCTYPE html>
<html lang="en">
<head>
  <title>Simple chat app</title>
  <link rel="stylesheet" type="text/css" href="/assets/main.css">
  <script src="/socket.io/socket.io.js"></script>
  <script src="/assets/appBundle.js"></script>
</head>
<body>
  <section id="top">
  </section>
  <!-- Content for response info -->
  <section id="content"> </section>
  <!-- Display the chat -->
  <section id="chat">
    <p id="title-message">NON-PICTORAL CHAT</p>
  </section>
  <!-- Send messages -->
  <section>
  <h3>Send Message</h3>
    <form id="messageForm" action="/sendMessage" method="post">
      <label id="messageLabel"  for="message" class="user-name">Name: </label>
      <input id="messageField" type="text" name="message" class="user-message"/>
      <input type="submit" value="Send" />
    </form>
    <!-- <button type="button" id="getMessageBtn">Get Messages</button> -->
  </section>
</body>
</html>
